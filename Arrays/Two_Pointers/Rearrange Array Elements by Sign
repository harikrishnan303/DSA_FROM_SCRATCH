class Solution {
    public int[] rearrangeArray(int[] nums)
    {
        int n=nums.length;
        int[] nums2=new int[n];
        int positive=0;
        int negative=1;

        for(int i=0;i<n;i++)
        {
            if(nums[i]<0)
            {
                nums2[negative]=nums[i];
                negative+=2;
            }
            else
            {
                nums2[positive]=nums[i];
                positive+=2;
                
            }
        }
        return nums2;
        
    }
}